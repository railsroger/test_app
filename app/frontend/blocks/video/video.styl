.video
  position relative
  overflow hidden
  background $blackLight
  width 100%
  height 100%

  &__element
    position absolute
    z-index 1
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    width auto
    min-width 100%
    height auto
    min-height 100%
    transition .5s
    opacity .8

    &_limited_size
      @media (min-aspect-ratio: 16/9)
        max-width 100%

      @media (max-aspect-ratio: 16/9)
        max-height 100%

    &_solid
      position relative
      transform none
      top auto
      left auto
      width 100%

    .video_played &
      opacity 1

  &__content
    position relative
    height 100%
    z-index 2
    transform translateZ(0)

  &__button-pause
  &__button-play
    link-style()
    color $blackLight
    background $white
    position absolute
    width 70px
    height 70px
    margin-left -35px
    margin-top -35px
    left 50%
    top 50%
    z-index 4
    text-align center
    border-radius 100%

  &__button-pause
    &:after
    &:before
      content ''
      display inline-block
      vertical-align top
      width 8px
      height 24px
      margin auto 3px
      background currentColor

  &__button-play
    padding-left 6px

    &:after
      triangle(24px, 28px, 'right', currentColor)
      display block
      content ''
      margin auto

[data-video-content]
  transform translateZ(0)
