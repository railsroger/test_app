@import '~swiper/dist/css/swiper.css'

.product-carousel
  &__container
    padding-bottom 25px

  &__item
    width 200px
    text-decoration none
    color currentColor

  &__item-image-wrapper
    height 130px
    padding 24px 35px
    background $grayLightest
    margin-bottom 12px

  &__item-image
    display block
    max-width 100%
    max-height 100%
    margin-left auto
    margin-right auto

  &__item-title
    position relative
    display inline-block
    vertical-align top
    padding-bottom 8px
    text-decoration none
    color currentColor
    transition color .2s ease
    overflow hidden
    transform translateZ(0)
    line-height (18 / 12)

    &:after
      content ''
      width 100%
      height 2px
      right 100%
      bottom 0
      background $blue
      position absolute
      transform translateX(0%) translateZ(0)
      transition transform .2s ease

      .product-carousel__item:hover &
        transform translateX(100%) translateZ(0)

  .swiper-scrollbar
    background #f1f1f1
    left 0
    width 100%

  .swiper-scrollbar-drag
    background $black
