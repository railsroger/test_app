.sitemap
  container()
  padding-top 135px
  padding-bottom 50px

  &__title
    text-bigger()
    text-align center
    margin-bottom 130px

  &__list
    display flex
    justify-content center

    +mobile()
      display block

  &__column
    width (100% / 8 * 2)
    text-align left
    text-transform uppercase
    padding-right 20px
    margin-bottom 30px

    +tablet()
      width (100% / 3)

    +mobile()
      width 100%
      padding-right 0

    a
      underline-link-style(currentColor)

  &__subgroup
    padding-left 22px

  &__group-item
    text-small()
    margin-bottom 17px

  &__subgroup-item
    text-smaller-2()
    margin-bottom 15px

  &__item
    text-smaller()
    margin-bottom 17px
