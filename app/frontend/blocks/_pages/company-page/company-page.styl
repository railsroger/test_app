.company-page
  &__menu
    position absolute
    z-index 2
    bottom 0
    left 0
    right 0
    display flex
    justify-content center
    flex-wrap wrap

    +mobile()
      display none

  &__menu-item
    text-transform uppercase

    &:not(:last-child)
      margin-right 55px

  &__menu-link
    link-style()
    position relative
    display inline-block
    vertical-align top
    padding-bottom $baseOffset

    &.active
      &:after
        opacity 1

    &:after
      content ''
      display block
      position absolute
      left 0
      right 0
      bottom 0
      height 2px
      background currentColor
      opacity 0
      transition opacity .3s ease

  &__scroll-indicator
    position fixed
    right 100%
    bottom 0
    width 100%
    height 5px
    background $blue
    transition transform .5s ease
    z-index 3
