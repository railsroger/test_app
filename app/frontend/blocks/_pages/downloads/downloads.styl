.downloads
  &__body-mobile
    container()
    text-smaller-2()
    padding-top 50px
    padding-bottom 100px
    background $black
    color $white
    text-align center
    display none

    +mobile()
      display block

  &__body
    background #f6f6f6

    +mobile()
      display none

  &__body-mobile-text
    max-width 260px
    margin-left auto
    margin-right auto
    margin-bottom $baseOffset

  &__result
    padding-bottom 100px

  &__table-wrapper
    overflow-x auto

  &__table
    width 100%
    border-collapse collapse

    tr
      &:nth-child(2n + 1):not(:first-child)
        background $grayLighter

    th
    td
      container()
      text-smaller()

      &:not(:last-child)
        padding-right 0

      &:last-child
        width 180px

    th
      text-transform uppercase
      text-align left
      padding-top 22px
      padding-bottom 22px
      font-weight inherit

    td
      font-avalon()
      padding-top 7px
      padding-bottom 4px

    a
      font-futura()
      underline-link-style(currentColor)
      text-transform uppercase
      line-height inherit
      padding-bottom 4px
