.contact
  &__form
    .contact &
      min-height auto

  &__inner
    max-width (740px + $baseOffset * 2)

  &__controls
    .contact &
      margin-bottom 36px

  &__banner
    background-color $grayLightest
    background-size cover
    background-position 50%
    padding-top 90px
    padding-bottom 1px

    +mobile()
      padding-top 40px

  &__banner-inner
    container()
    max-width (1170px + $baseOffset * 2)
    display flex
    align-items flex-start

    +tablet()
      display block

  &__column
    width 50%
    display flex
    flex-wrap wrap
    align-items flex-start
    margin-bottom 60px

    +tablet()
      width 100%

    +mobile()
      margin-bottom 40px

    &:last-child
      padding-left ($baseOffset / 2)

      +tablet()
        padding-left 0

  &__subcolumn
    width 50%
    padding-right ($baseOffset / 2)
    min-width 165px

  &__title
    font-avalon()
    text-medium-2()
    text-transform uppercase
    width 100%
    margin-bottom 50px

  &__subtitle
    text-small-2()
    text-transform uppercase
    margin-bottom 14px

  &__text
    p
      text-smaller()
      text-transform uppercase
      margin-bottom 34px

    a
      link-style()

  li
  &__list-item
    text-smaller()
    text-transform uppercase
    margin-bottom 20px
    padding-left 26px
    position relative
    background-image url('../assets/images/check.svg')
    background-repeat no-repeat
    background-size 10px
    background-position 1px 8px

    .icon
      font-size 6px
      position absolute
      left 0
      top 7px

  &__call-block
    max-width 826px
    position relative

  &__call-buttons
    display flex
    flex-wrap wrap

  &__call-item
    height 215px
    width 50%
    text-align center
    display flex
    align-items center
    justify-content center
    position relative
    overflow hidden
    transition opacity .3s ease

    &:after
      position absolute
      content ''
      background #f7f7f7
      z-index 1
      transition left .3s, top .3s, right .3s, bottom .3s
      will-change left, top, right, bottomit
      left 13px
      right 13px
      top 13px
      bottom 13px

      +mobile()
        left 10px
        right 10px
        top 10px
        bottom 10px

      .contact__call-block_opened &
        left 0
        right 0
        top 0
        bottom 0

  &__call-item-inner
    opacity 1
    transition opacity .3s ease
    position relative
    z-index 2

    .contact__call-block_opened &
      opacity 0

  &__call-item-icon
    display block
    height 36px
    max-width 36px
    margin-bottom 20px
    margin-left auto
    margin-right auto

  &__call-title
    text-smaller()
    text-transform uppercase
    position relative
    display inline-block
    vertical-align top
    padding-bottom 10px
    transition color .2s ease
    overflow hidden
    line-height 1
    transform translateZ(0)

    &:after
      content ''
      width 100%
      height 2px
      right 100%
      bottom 0
      background $blue
      position absolute
      transform translateX(0%) translateZ(0)
      transition transform .2s ease

      .contact__call-item:hover &
        transform translateX(100%) translateZ(0)

  &__call-window
    padding-left ($baseOffset / 2)
    padding-right ($baseOffset / 2)
    padding-top 46px
    position absolute
    top 0
    left 0
    width 100%
    z-index 2

    +mobile()
      padding-left ($baseOffsetMobile / 2)
      padding-right ($baseOffsetMobile / 2)

  &__window-close
    text-smaller()
    underline-link-style(currentColor)
    text-transform uppercase
    position absolute
    right 30px
    top 30px

    +mobile()
      right $baseOffsetMobile
      top $baseOffsetMobile

  &__window-head
    text-small()
    text-align center
    width 100%
    margin-bottom 44px

    +mobile()
      margin-bottom 30px

    a
      link-style()

    .icon
      font-size (20em / 24)
      vertical-align inherit
      margin-right (14em / 24)

  &__window-column-wrap
    display flex
    flex-wrap wrap
    align-items flex-start

  &__window-column
    width 50%
    padding-left ($baseOffset / 2)
    padding-right ($baseOffset / 2)
    margin-bottom $baseOffset

    +mobile()
      padding-left ($baseOffsetMobile / 2)
      padding-right ($baseOffsetMobile / 2)
      width 100%

  &__window-title
    font-size 16px
    text-transform uppercase
    margin-bottom 18px

  &__window-list
    text-smaller()
    display flex
    flex-wrap wrap
    text-transform uppercase
    line-height inherit

  &__window-item
    width 50%

    &:nth-child(2n + 1)
      padding-right 10px

    &:nth-child(2n)
      padding-left 10px

  &__window-subtitle
    color #565656

  &__window-text
    text-smaller()
    max-width 280px

    p
      margin-bottom 20px

    a
      link-style()
      color $blue

      &:hover
        color currentColor
