.specs-list
  background #141414
  color $white
  padding-bottom 100px

  +mobile()
    padding-bottom 80px

  &__more
    container()
    max-width (1270px + $baseOffset * 2)
    display none

  &__more-inner
    padding-bottom 60px

  &__more-group
    display flex
    flex-wrap wrap
    margin-bottom 6px

  &__more-title
    text-small-2()
    width 100%
    margin-bottom 27px

  &__more-item
    width 25%
    padding-right $baseOffset
    margin-bottom 30px

    +mobile()
      width 50%

  &__more-item-name
    color #ccc
    font-size 13px
    margin-bottom 6px

  &__more-item-value
    text-smaller()
    color $white
    word-break break-all
    word-break break-word

  &__button
    border-radius 50px
    height 50px
    font-size 15px
    line-height 50px
    padding 0 20px
    text-transform uppercase
    color currentColor
    display flex
    align-items center
    margin-left auto
    margin-right auto
    border 1px solid #7e7e7e

    &_opened
      .specs-list &
        .icon
          transform scale(1, -1)

    .icon
      font-size 7px
      margin-left 15px
      transform scale(1, 1)
      transition transform .3s ease

  &__button-text-wrapper
    overflow hidden
    height 50px

  &__button-text
    transform translateY(0%)
    transition transform .3s ease

    .specs-list__button_opened &
      transform translateY(-100%)
