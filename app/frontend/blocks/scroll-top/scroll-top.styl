.scroll-top
  position fixed
  right $baseOffset
  bottom $baseOffset
  width 50px
  height 50px
  z-index 10
  font-size 8px
  background #d1d1d1
  transition background .3s ease
  color $white
  border-radius 100%
  display none

  +mobile()
    right $baseOffsetMobile
    bottom $baseOffsetMobile

  &:hover
    background $blue
