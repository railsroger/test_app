@import '~swiper/dist/css/swiper.css'

.reviews-slider
  background-color #1a1a1a
  color $white
  overflow hidden
  position relative

  &__container
    padding-bottom 70px

    +mobile()
      padding-bottom 40px

  &__slide
    container()
    display block

  &__navigation
    position absolute
    width 25%
    top 0
    bottom 0
    z-index 2

    &_left
      left 0

    &_right
      right 0

  &__slide-container
    container()
    padding-top 100px
    padding-bottom 100px
    max-width 800px
    margin-left auto
    margin-right auto
    position relative

    +mobile()
      padding-top 40px
      padding-bottom 60px

    &:before
    &:after
      text-big-2()
      position absolute
      top 100px
      color $green

    &:before
      content '\201C'
      right 100%

      +mobile()
        margin-right -10px

    &:after
      content '\201D'
      left 100%

      +mobile()
        margin-left -10px

  &__slide-text
    text-medium-2()
    margin-bottom 45px

  &__slide-image
    display block
    margin-left auto
    margin-right auto

  .swiper-pagination
    bottom 75px

    +mobile()
      bottom 40px

  .swiper-pagination-bullet
    background #444
    opacity 1
    width 6px
    height 6px

    &.swiper-pagination-bullet-active
      background $green
