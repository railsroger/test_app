.product-card
  position relative
  width 100%
  overflow hidden

  +not-mobile()
    padding-bottom 100%

  &_ui_white
    color white

  &__body
    padding-left ($baseOffset / 2)
    padding-right ($baseOffset / 2)
    padding-top 18px
    display flex
    flex-direction column

    +not-mobile()
      position absolute
      top 0
      left 0
      height 100%
      width 100%

    .product-card_size_large &
      padding-top 36px

      +mobile()
        padding-top 20px

  &__head
    display flex
    justify-content space-between
    flex-shrink 0
    align-items flex-start
    position relative
    z-index 3

    .product-card_size_large &
      +not-mobile()
        padding-left ($baseOffset / 2)
        padding-right ($baseOffset / 2)

  &__image-wrapper
    padding-left ($baseOffset / 2)
    padding-right ($baseOffset / 2)
    position relative
    text-align center
    height 50%
    margin-top auto
    margin-bottom auto
    padding-top 40px
    padding-bottom 40px
    flex-grow 1
    display flex
    align-items center
    justify-content center

    +mobile()
      height 300px

  &__image-inner
    width 100%
    height 100%
    position relative

  &__image
    max-width 100%
    max-height 100%
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)

  &__hover
    z-index 2
    padding-bottom 80px
    transition opacity .3s ease

    +not-mobile()
      abs()
      padding-left ($baseOffset / 2)
      padding-right ($baseOffset / 2)
      background $white
      opacity 0
      padding-top 66px

    .product-card_size_large &
      +not-mobile()
        padding-left $baseOffset
        padding-right $baseOffset
        padding-top 120px

    .product-card_ui_white &
      +not-mobile()
        background #020202

    &:hover
      opacity 1

  &__hover-body
    overflow hidden
    height 100%
    position relative

    &:after
      content ''
      position absolute
      left 0
      right 0
      bottom 0
      height 15px
      background linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

      +mobile()
        display none

      .product-card_ui_white &
        background linear-gradient(to bottom, rgba(2,2,2,0) 0%,rgba(2,2,2,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

  &__hover-title
    text-smaller-2()
    underline-link-style(currentColor)
    text-transform uppercase
    margin-bottom 20px

    .product-card_size_large &
      +not-mobile()
        text-medium()
        margin-bottom 40px

    strong
      color $blue

  &__options-list
    margin-bottom 10px

    .product-card_size_large &
      +not-mobile()
        text-smaller-2()

  &__option
    padding-top 10px
    padding-bottom 10px
    padding-left 22px
    position relative

    &:not(:last-child)
      border-bottom 1px solid currentColor

      .product-card_size_large &
        +not-mobile()
          border-width 2px

    &:before
      content ''
      position absolute
      width 4px
      height 4px
      background currentColor
      border-radius 100%
      left 2px
      top 14px

      .product-card_size_large &
        +not-mobile()
          width 6px
          height 6px
          top 23px

  &__hover-footer
    text-smaller-2()
    line-height 1.2
    text-transform uppercase
    display flex
    justify-content space-between
    align-items center
    left ($baseOffset / 2)
    right ($baseOffset / 2)
    bottom ($baseOffset / 2)

    +not-mobile()
      position absolute

    +tablet()
      left $baseOffsetMobile
      right $baseOffsetMobile
      bottom $baseOffsetMobile

    .product-card_size_large &
      left $baseOffset
      right $baseOffset
      bottom $baseOffset

      +not-mobile()
        text-small()

  &__description-left
    text-small()
    margin-top -.14em

    .product-card_size_large &
      +not-mobile()
        text-medium-2()

  &__description-right
    text-smaller-2()

    .product-card_size_large &
      +not-mobile()
        text-small()

  &__description
    text-smaller-2()
    margin-bottom 30px
    text-align center
    margin-top 20px

  &__icons
    margin-bottom 80px
    text-align center

  &__icon
    margin-left 20px
    margin-right 20px
    display inline-block
    vertical-align middle
    max-height 35px

    +mobile()
      margin-left 15px
      margin-right 15px
      max-height 25px

  &__button
    underline-link-style($blue)
    color $blue
    margin-bottom -10px

    .product-card_ui_white &
      underline-link-style($blue)
      color $blue
