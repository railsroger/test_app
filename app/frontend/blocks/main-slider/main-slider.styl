@import '~swiper/dist/css/swiper.css'

.main-slider
  height 100%

  &__container
    height 100%

  &__slide
    height 100%
    overflow hidden
    position relative
    background-size cover
    background-position 50%
    background-color $blackLight
    color $white

  &__description
    underline-link-style()
    text-transform uppercase

  &__nav
    position absolute
    top 0
    height 100%
    min-width 100px
    color currentColor
    padding $baseOffset
    display flex
    align-items flex-end
    cursor pointer
    max-width 50%

    +mobile()
      padding $baseOffsetMobile

    &:hover
      .main-slider__description
        &:after
          transform translateX(100%) translateZ(0)

    &_side
      &_left
        left 0

      &_right
        right 0
        text-align right
