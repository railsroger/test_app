@import '~choices.js/assets/styles/css/choices.css'

.select
  position relative
  width 100%
  height 60px

  +mobile()
    height 50px

  &__input
    container()
    text-smaller()
    text-transform uppercase
    width 100%
    border-radius 0
    -webkit-appearance none
    border 0
    background $white
    position relative
    height 100%

  &__overlay
    display none
    position absolute
    left 0
    width 100%
    top 100%
    height 100vh
    background alpha($blackDarker, .25)
    z-index 2
    transform translateZ(0)


.choices__list.choices__list--dropdown
  color $black

.choices
  height 100%

  &__inner
    container()
    border 0
    height 100%
    display flex
    align-items center
    width 100%
    background none

  &[data-type*="select-one"]:after
    right 24px

  &__list
    padding 0

    &--dropdown
      border 0
      border-radius 0
      z-index 3

  &__item
    text-smaller()

    .choices__list--single &
      text-overflow ellipsis
      white-space nowrap
      overflow hidden

    .choices__list--dropdown &
      text-smaller()

    &--choice
      .choices &
        container()
        padding-top 22px
        padding-bottom 22px

      &:after
        display none
