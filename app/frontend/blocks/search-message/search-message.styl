.search-message
  display flex
  min-height 500px
  align-items center
  justify-content center
  flex-direction column
  color #9e9e9e

  &__message-icon
    margin-bottom 10px
    color #c9c9c9
    width 500px
    max-width 100%
    text-align center

    img
      max-width 100%

  &__message-text
    text-smaller()
    text-align center
    text-transform uppercase
