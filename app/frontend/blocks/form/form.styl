.form
  text-align left
  width 100%
  display flex
  min-height 100vh
  padding-top 170px
  padding-bottom 80px

  +mobile()
    padding-top 120px

  &__inner
    container()
    width 100%

  &__title
    text-bigger()
    text-transform uppercase
    margin-bottom 60px
    text-align center

  &__row
    display flex
    margin-left ($baseOffset / -2)
    margin-right ($baseOffset / -2)

    +mobile()
      display block

  &__column
    padding-left ($baseOffset / 2)
    padding-right ($baseOffset / 2)
    width 50%

    +mobile()
      width 100%

  &__input
    position relative

  &__input-error
    position absolute
    top 100%
    right 0
    padding-top 3px
    color $red
    text-transform uppercase
    text-align right

  &__checkbox
    margin-top 45px

  &__footer
    text-align center
    margin-top 130px

    +mobile()
      margin-top 80px

  &__button
  &__submit
    text-small()
    underline-link-style($black)
    text-transform uppercase

    &:disabled
      cursor default

  &__message
    text-smaller()
    margin-top 160px
    margin-bottom 160px
    text-transform uppercase
    text-align center
    max-width 480px
    margin-left auto
    margin-right auto

    p
      margin-bottom 24px
