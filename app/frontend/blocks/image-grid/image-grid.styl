.image-grid
  display flex

  +mobile()
    display block

  &__column
    width 50%
    display flex
    flex-wrap wrap

    +mobile()
      width 100%

  &__item
    flex-grow 1
    width 50%
    padding-bottom 50%
    background-size cover
    background-position 50%

    &_large
      width 100%
