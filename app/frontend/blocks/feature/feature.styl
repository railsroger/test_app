.feature
  position relative
  display flex
  align-items center
  justify-content center
  overflow hidden
  text-decoration none
  color currentColor
  padding-top 20px
  padding-bottom 20px

  +mobile()
    container()
    min-height 300px

  &__title
    container()
    position absolute
    bottom 180px
    text-transform uppercase
    text-align center
    width 100%
    left 0
    margin-bottom em(-8, 12)
    overflow hidden
    transform translateZ(0)
    transition opacity .3s
    transition-delay .3s
    z-index 5

    +mobile()
      bottom 20px

    &_big
      text-small()

  &__title-text
  &__hover-title-text
    display block
    position relative
    padding-bottom 1px

  &__image-wrapper
    width 100%

  &__image
    display block
    max-width 50%
    max-height 22vh
    margin-bottom 50px
    margin-left auto
    margin-right auto

  &__overlay
    abs()
    display none
    z-index 1
    content ''
    background $grayLighter

  &__hover
    abs()
    display flex
    display none
    align-items center
    justify-content center
    z-index 2

  &__hover-image
    display block
    max-width 80%
    max-height 32vh
    margin-bottom 50px
    margin-left auto
    margin-right auto

