.product
  &__head
    padding-top 180px
    padding-bottom 120px
    background-size cover
    background-position 50%
    display flex
    align-items center

    +mobile()
      display block
      padding-top 120px
      padding-bottom 10px

    &_ui
      &_black
        color $blackLight
        background-color: $white

      &_white
        color $white
        background-color $blackDark

  &__head-image-column
    width 50%

    +mobile()
      width 100%
      margin-bottom $baseOffset

    &:first-child
      padding-right $baseOffset

      +mobile()
        padding-right 0

    &:last-child
      text-align right

  &__head-text-column
    width 50%
    padding-right $baseOffset

    +mobile()
      container()
      width 100%
      margin-bottom $baseOffset

    &:first-child
      padding-left $baseOffset

      +mobile()
        padding-right 0

  &__head-image
    max-width 100%

  &__head-description
    text-smaller()
    margin-bottom 4px

  &__head-title
    text-big-2()
    margin-bottom 18px

  &__head-name
    text-smaller()
    margin-bottom 30px

  &__head-features
    margin-bottom 28px

  &__head-feature
    display inline-block
    vertical-align top
    margin-right 20px
    max-width 26px

  &__head-buttons
    display block

  &__head-button
    display inline-block
    vertical-align top
    padding 16px 18px
    margin-right 8px
    margin-bottom 12px
    color currentColor
    text-decoration none
    transition .3s

    .product__head_ui_white &
      background #1c1c1c

      &:hover
        background $blue

    .product__head_ui_black &
      background $gray

      &:hover
        background $blue
        color $white

  &__menu
    display block
    position relative
    z-index 1

  &__menu-inner
    text-smaller()
    display flex
    align-items center
    flex-wrap wrap
    padding-top 104px
    background #151515
    color $white

    +mobile()
      padding-top 65px

  &__menu-list
    margin-left auto

  &__menu-link
    container()
    padding-top 18px
    padding-bottom 18px
    color currentColor
    display inline-block
    vertical-align top
    text-transform uppercase
    text-decoration none
    transition all .3s ease

    +mobile()
      padding-top 15px
      padding-bottom 15px

    &:hover
      color $white
      background $blue

    &_markered
      background $blue
      color $blackLight

      &:hover
        color $white

  &__stick-bar
    +mobile()
      display none

  &__full-image
    width 100%
    display block

  &__block
    position relative
    background-size cover
    background-position 50%
    z-index 0

  &__support-list
    display flex
    max-width (1200px + $baseOffset * 2)
    margin-left auto
    margin-right auto
    padding-bottom 100px

    +mobile()
      display block
      padding-bottom 30px

  &__support-item
    container()
    text-align center

    +mobile()
      margin-bottom 40px

  &__support-item-link
    text-decoration none
    color currentColor

  &__support-icon-wrapper
    height 44px
    display flex
    align-items center
    justify-content center
    margin-bottom 12px
    font-size 38px

  &__support-title
    font-avalon()
    position relative
    display inline-block
    font-size 16px
    margin-bottom 5px
    overflow hidden
    padding-bottom 8px

    &:after
      content ''
      width 100%
      height 2px
      right 100%
      bottom 0
      background $blue
      position absolute
      transform translateX(0%) translateZ(0)
      transition transform .2s ease

      .product__support-item-link:hover &
        transform translateX(100%) translateZ(0)

  &__support-text
    text-smaller()
    color #5c5c5c
