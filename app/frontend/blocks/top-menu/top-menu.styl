.top-menu
  $offset = 15px
  position absolute
  top 0
  left 0
  right 0
  background alpha($blackDarker, .9)
  color $white
  z-index 1

  &__menu
    container()
    display none
    width 100%
    left 0
    top 0

  &__inner
    display flex
    min-height 50vh
    padding-top 180px
    padding-bottom $baseOffset
    max-width 1380px
    margin-left auto
    margin-right auto

  &__info-column
    width 40%

  &__cards-column
    width 60%

  &__title
    text-big-2()
    margin-bottom 70px

  &__list-wrapper
    display flex

  &__list
    width 50%

  &__list-item
    text-smaller()
    padding-right $baseOffset
    margin-bottom 18px

  &__list-link
    display flex
    justify-content space-between
    color currentColor
    transition color .2s ease
    text-decoration none

  &__list-link-text
    position relative
    display inline-block
    vertical-align top
    padding-bottom 7px
    text-transform uppercase
    overflow hidden

    &:after
      content ''
      width 100%
      height 2px
      right 100%
      bottom 0
      background $blue
      position absolute
      transform translateX(0%) translateZ(0)
      transition transform .2s ease

      .top-menu__list-link:hover &
        transform translateX(100%) translateZ(0)

  &__list-link-description
    width 30%
    min-width 80px
    transition opacity .2s ease
    padding-bottom 7px

    .top-menu__list-link:hover &
      color $blue

  &__cards
    display flex
    margin-left - $offset
    margin-right - $offset
    margin-bottom 30px

  &__card-wrapper
    width 50%
    position relative
    padding-left $offset
    padding-right $offset

  &__card
    link-style()
    position relative
    display block

  &__card-image
    max-width 100%
    display block
    margin-left auto
    margin-right auto

  &__card-title
    position absolute
    text-transform uppercase
    left 0
    right 0
    bottom 0
    padding 20px
    z-index 2

  &__bottom-link-wrapper
    text-align right

  &__bottom-link
    text-smaller()
    underline-link-style()
    text-transform uppercase
    margin-left auto
