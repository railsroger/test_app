.bright-block
  display flex
  background-size cover
  background-position 50%
  position relative
  z-index 0

  +mobile()
    display block

  &_ui
    &_black
      color $blackLight

    &_white
      color $white

  &__column
    container()
    width 25%
    padding-top $baseOffset
    padding-bottom $baseOffset
    position relative
    display flex
    align-items flex-end
    min-height 800px
    position relative
    z-index 2

    +mobile()
      padding-top $baseOffsetMobile
      padding-bottom $baseOffsetMobile
      width 100%
      min-height 100px

    &:hover
    &.active
      &:before
        opacity 0

    &:before
      abs()
      content ''
      background rgba($blackLight, .2)
      opacity 1
      transition opacity .3s
      z-index 1

    &:not(:last-child)
      &:after
        content ''
        position absolute
        right 0
        bottom 0
        height 100%
        width 1px
        background currentColor
        opacity .15

        +mobile()
          width 100%
          height 1px

  &__cover
    background-size cover
    background-position 50%
    position absolute
    height 100%
    width 100%
    left 0
    right 0
    z-index 1
    opacity 0
    transition opacity .3s

    &.active
      opacity 1
      z-index 3

    &:hover
      &:after
        opacity .5

    &:after
      content '+'
      position absolute
      top 15px
      right 20px
      transform rotate(45deg) translateZ(0)
      font-size 26px
      opacity 1
      transition opacity .3s

  &__head
    text-small()
    text-align right
    position absolute
    top 10px
    right 20px
    left 20px
    z-index 2
    opacity 1
    transition opacity .3s

    .bright-block:hover &
      opacity .4

    .bright-block__column:hover &
      opacity 1

  &__content
    position relative
    z-index 2
    opacity 1
    transition opacity .3s

    .bright-block:hover &
      opacity .4

    .bright-block__column:hover &
      opacity 1

  &__title
    font-avalon()
    text-medium()
    margin-bottom 10px

  &__text
    text-smaller()
    line-height initial
    min-height 40px

    +mobile()
      min-height auto
