<div class="row">
  <div class="col-xs-12 col-md-6">
    <div class="form-group">
      <%= f.label :display do %>
        <%= f.check_box :display %>
        <%== t('.display') %>
      <% end %>
    </div>

    <%= f.field_container :link, class: ['form-group'] do %>
      <%= f.label :link, t('.link') %> <span class="required">*</span>
      <%= f.text_field :link, class: 'form-control' %>
      <%= f.error_message_on :link %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :flag, class: ['form-group'] do %>
      <%= f.label :flag, t('.flag') %>
      <% if @country.flag? %>
        <br/>
        <%= image_tag(@country.flag.url) %>
        <br/>
        <%= f.label :delete_flag do %>
          <%= f.check_box :delete_flag %>
          <%== t('.delete') %>
        <% end %>
      <% end %>
      <%= f.file_field :flag %>
      <p class="help-block">24x12, PNG</p>
    <% end %>
  </div>
</div>
