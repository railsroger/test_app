<% content_for :page_title do %>
  <%= link_to Spree.t(:hero_slides), admin_hero_slides_url %> /
  <%= @hero_slide.title %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @hero_slide } %>

<%= form_for [:admin, @hero_slide] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
