<div data-hook="admin_footer_item_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :link, class: ['form-group'] do %>
      <%= f.label :link, Spree.t(:link) %>
      <%= f.text_field :link, class: 'form-control' %>
      <%= f.error_message_on :link %>
    <% end %>

    <%= f.field_container :image, class: ['form-group'] do %>
      <%= f.label :image, Spree.t(:image) %> <span class="required">*</span>
      <% if @hero_slide.image? %>
        <br>
        <%= link_to image_tag(@hero_slide.image.url(:admin)), @hero_slide.image.url(:normal) %>
        <br>
      <% end %>
      <%= f.file_field :image %>
      <p class="help-block">1280x800 or larger</p>
    <% end %>

    <%= f.field_container :video, class: ['form-group'] do %>
      <%= f.label :video, Spree.t(:video) %>
      <% if @hero_slide.video.present? %>
        <br>
        <%= link_to @hero_slide.video_file_name, @hero_slide.video.url(:mp4) if @hero_slide.video? %>
        <br>
        <%= f.label :delete_video do %>
          <%= f.check_box :delete_video %>
          <%= Spree.t(:delete) %>
        <% end %>
      <% end %>
      <%= f.file_field :video %>
      <p class="help-block">16:9 video</p>
    <% end %>
  </div>

  <div class="col-xs-12 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title"><%= Spree.t(:title_align)%></h1>
      </div>

      <div class="panel-body">
        <div data-hook="title_vertical_align" class="form-group">
          <%= f.label :title_vertical_align, Spree.t(:vertical) %>
          <%= f.collection_select(:title_vertical_align, Spree::HeroSlide.title_vertical_aligns, :first, :first, {}, {class: 'select2'}) %>
        </div>


        <div data-hook="title_horizontal_align" class="form-group">
          <%= f.label :title_horizontal_align, Spree.t(:horizontal) %>
          <%= f.collection_select(:title_horizontal_align, Spree::HeroSlide.title_horizontal_aligns, :first, :first, {}, {class: 'select2'}) %>
        </div>
      </div>
    </div>
  </div>
</div>
