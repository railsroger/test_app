<div data-hook="admin_footer_item_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :icon, class: ['form-group'] do %>
      <%= f.label :icon, Spree.t(:icon) %>
      <br>
      <%= link_to(@contact.icon_file_name, @contact.icon.url) if @contact.icon? %>
      <br>
      <%= f.label :delete_icon do %>
        <%= f.check_box :delete_icon %>
        <%= Spree.t(:delete) %>
      <% end if @contact.icon? %>
      <%= f.file_field :icon %>
      <p class="help-block">300x300, SVG file</p>
    <% end %>

    <%= f.field_container :phone, class: ['form-group'] do %>
      <%= f.label :phone, Spree.t(:phone) %>
      <%= f.text_field :phone, class: 'form-control' %>
      <%= f.error_message_on :phone %>
    <% end %>

    <%= f.field_container :working_hours_mon_sat, class: ['form-group'] do %>
      <%= f.label :working_hours_mon_sat, Spree.t(:working_hours_mon_sat) %>
      <%= f.text_field :working_hours_mon_sat, class: 'form-control' %>
      <%= f.error_message_on :working_hours_mon_sat %>
    <% end %>

    <%= f.field_container :working_hours_sun, class: ['form-group'] do %>
      <%= f.label :working_hours_sun, Spree.t(:working_hours_sun) %>
      <%= f.text_field :working_hours_sun, class: 'form-control' %>
      <%= f.error_message_on :working_hours_sun %>
    <% end %>

    <%= f.field_container :text, class: ['form-group'] do %>
      <%= f.label :text, Spree.t(:text) %>
      <%= f.text_area :text, class: 'form-control', rows: 5 %>
      <%= f.error_message_on :text %>
    <% end %>

    <%= f.field_container :faq_link, class: ['form-group'] do %>
      <%= f.label :faq_link, Spree.t(:faq_link) %>
      <%= f.text_field :faq_link, class: 'form-control' %>
      <%= f.error_message_on :faq_link %>
    <% end %>

    <%= f.field_container :faq_text, class: ['form-group'] do %>
      <%= f.label :faq_text, Spree.t(:faq_text) %>
      <%= f.text_field :faq_text, class: 'form-control' %>
      <%= f.error_message_on :faq_text %>
    <% end %>
  </div>
</div>
