<tr class="section fields" id="spree_<%= dom_id(f.object) %>" data-hook="section">
  <td class="move-handle text-center">
    <span class="icon icon-move handle"></span>
    <%= f.hidden_field :id %>
  </td>
  <td class="name"><%= f.text_field :name, class: "form-control" %></td>
  <td class="presentation"><%= f.text_field :link, class: "form-control" %></td>
  <td class="actions actions-1 text-center"><%= link_to_icon_remove_fields f %></td>
</tr>
