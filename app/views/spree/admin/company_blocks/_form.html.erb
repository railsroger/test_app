<div class="panel-body">
  <div data-hook="admin_footer_item_form_fields" class="row">
    <div class="col-xs-12 col-md-12">
      <%= f.label :is_active do %>
        <%= f.check_box :is_active %>
        <%= Spree.t(:show_company_block) %>
      <% end %>
    </div>

    <div class="col-xs-12 col-md-12">
      <%= f.field_container :main_statement, class: ['form-group'] do %>
        <%= f.label :main_statement, Spree.t(:main_statement) %>
        <%= f.text_field :main_statement, class: 'form-control' %>
        <%= f.error_message_on :main_statement %>
      <% end %>
    </div>
  </div>
</div>

<div class="panel-heading">
  <h1 class="panel-title">
    <%= Spree.t(:Video) %>
  </h1>
</div>

<div class="panel-body">
  <div class="panel-body">
    <div class="col-xs-12 col-md-12">
      <%= f.field_container :video_statement, class: ['form-group'] do %>
        <%= f.label :video_statement, Spree.t(:video_statement) %>
        <%= f.text_field :video_statement, class: 'form-control' %>
        <%= f.error_message_on :video_statement %>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= f.field_container :video_cover, class: ['form-group'] do %>
        <%= f.label :video_cover, Spree.t(:video_cover) %>
        <% if @company_block.video_cover? %>
          <br>
          <%= link_to image_tag(@company_block.video_cover.url(:admin)), @company_block.video_cover.url(:normal) %>
          <br>
        <% end %>
        <%= f.file_field :video_cover %>
        <p class="help-block">1280x800 or larger</p>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= f.field_container :video, class: ['form-group'] do %>
        <%= f.label :video, Spree.t(:video) %>
        <% if @company_block.video? %>
          <br>
          <%= link_to @company_block.video_file_name, @company_block.video.url(:mp4) %>
          <br>
        <% end %>
        <%= f.file_field :video %>
        <p class="help-block">16:9 video</p>
      <% end %>
    </div>
  </div>
</div>
