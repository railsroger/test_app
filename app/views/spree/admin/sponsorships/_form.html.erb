<div data-hook="admin_footer_item_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :slug, class: ['form-group'] do %>
      <%= f.label :slug, Spree.t(:slug) %> <span class="required">*</span>
      <%= f.text_field :slug, class: 'form-control' %>
      <%= f.error_message_on :slug %>
    <% end %>

    <%= f.field_container :slogan, class: ['form-group'] do %>
      <%= f.label :slogan, Spree.t(:slogan) %>
      <%= f.text_area :slogan, class: 'form-control', rows: 3 %>
      <%= f.error_message_on :slogan %>
    <% end %>

    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :text, class: ['form-group'] do %>
      <%= f.label :text, Spree.t(:text) %>
      <%= f.text_area :text, class: 'form-control', rows: 5 %>
      <%= f.error_message_on :text %>
    <% end %>

    <%= f.field_container :main_image, class: ['form-group'] do %>
      <%= f.label :main_image, Spree.t(:main_image) %> <span class="required">*</span>
      <br>
      <%= link_to image_tag(@sponsorship.main_image.url(:admin)), @sponsorship.main_image.url(:normal) if @sponsorship.main_image? %>
      <br>
      <%= f.file_field :main_image %>
      <p class="help-block">1600x900</p>
    <% end %>

    <%= f.field_container :preview_image, class: ['form-group'] do %>
      <%= f.label :preview_image, Spree.t(:preview_image) %> <span class="required">*</span>
      <br>
      <%= link_to image_tag(@sponsorship.preview_image.url(:admin)), @sponsorship.preview_image.url(:normal) if @sponsorship.preview_image? %>
      <br>
      <%= f.file_field :preview_image %>
      <p class="help-block">800x900</p>
    <% end %>

    <%= f.field_container :pattern_image, class: ['form-group'] do %>
      <%= f.label :pattern_image, Spree.t(:pattern_image) %> <span class="required">*</span>
      <br>
      <%= link_to image_tag(@sponsorship.pattern_image.url(:admin)), @sponsorship.pattern_image.url(:normal) if @sponsorship.pattern_image? %>
      <br>
      <%= f.file_field :pattern_image %>
      <p class="help-block">1600x450</p>
    <% end %>
  </div>
</div>
