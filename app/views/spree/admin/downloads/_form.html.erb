<div data-hook="admin_footer_item_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :product_id, class: ['form-group'] do %>
      <%= f.label :product_id, t('.product') %>
      <%= f.select(:product_id, Spree::Product.all.collect {|c| [c.name, c.id]}, { include_blank: t('.no_product') }, { class: 'select2' }) %>
      <%= f.error_message_on :product_id %>
    <% end %>

    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:title) %> <span class="required">*</span>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :category, class: ['form-group'] do %>
      <%= f.label :category, Spree.t(:category) %>
      <%= f.select(:category_id, Spree::DownloadsCategory.all.collect {|c| [c.name, c.id]}, {}, { class: 'select2' }) %>
      <%= f.error_message_on :category %>
    <% end %>

    <%= f.field_container :description, class: ['form-group'] do %>
      <%= f.label :description, Spree.t(:description) %>
      <%= f.text_field :description, class: 'form-control' %>
      <%= f.error_message_on :description %>
    <% end %>

    <%= f.field_container :version, class: ['form-group'] do %>
      <%= f.label :version, Spree.t(:version) %>
      <%= f.text_field :version, class: 'form-control' %>
      <%= f.error_message_on :version %>
    <% end %>

    <%= f.field_container :date, class: ['form-group'] do %>
      <%= f.label :date, Spree.t(:date) %>
      <%= f.text_field :date, value: datepicker_field_value(@download.date || Date.today), class: 'datepicker form-control' %>
      <%= f.error_message_on :date %>
    <% end %>

    <%= f.field_container :file, class: ['form-group'] do %>
      <%= f.label :file, Spree.t(:file) %> <span class="required">*</span>
      <%= link_to @download.file_file_name, @download.file.url if @download.file? %>
      <%= f.file_field :file %>
    <% end %>
  </div>
</div>
