<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.error_message_on :title %>
    <% end %>
  </div>

  <div class="col-xs-12 col-md-6">
    <%= f.field_container :slug, class: ['form-group'] do %>
      <%= f.label :slug, Spree.t(:slug) %> <span class="required">*</span>
      <%= f.text_field :slug, class: "form-control" %>
      <%= f.error_message_on :slug %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-12">
    <%= f.field_container :html, class: ['form-group'] do %>
      <%= f.label :html, Spree.t(:html) %>
      <%= f.text_area :html, class: 'form-control editable', rows: 15, 'data-redactor' => true %>
      <%= f.error_message_on :html %>
    <% end %>
  </div>
</div>

<% content_for :head do %>
  <script>
      $.fn.redactor_init = function () {
          var el = this;
          $(el).redactor({
              //lang: '<%= I18n.locale %>',
              formattingTags: ['p', 'blockquote', 'pre', 'h2', 'h3', 'h4', 'div'],
              iframe: true,
              css: <%== [asset_path('application.css')].to_json %>,
              minHeight: 650,
              imageFloatMargin: '30px',
              imageGetJson: false,
              convertDivs: false,
              pastePlainText: true,
              imageUpload: '<%= admin_image_files_path %>'
          });
      };
      $(function () {
          $('textarea[data-redactor]').redactor_init();
      });
  </script>
<% end %>
