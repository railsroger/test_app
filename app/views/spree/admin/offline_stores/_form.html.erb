<div data-hook="admin_footer_item_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :address, class: ['form-group'] do %>
      <%= f.label :address, Spree.t(:address) %> <span class="required">*</span>
      <%= f.text_field :address, class: 'form-control' %>
      <%= f.error_message_on :address %>
    <% end %>

    <%= f.field_container :coordinates, class: ['form-group'] do %>
      <%= f.label :coordinates, Spree.t(:coordinates) %> <span class="required">*</span>
      <%= f.text_field :coordinates, class: 'form-control' %>
      <%= f.error_message_on :coordinates %>
    <% end %>

    <%= f.field_container :pin_color, class: ['form-group'] do %>
      <%= f.label :pin_color, Spree.t(:pin_color) %>
      <%= f.text_field :pin_color, class: 'form-control' %>
      <%= f.error_message_on :pin_color %>
    <% end %>
  </div>
</div>
