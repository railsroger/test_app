<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :is_active, class: ['form-group'] do %>
      <%= f.label :is_active do %>
        <%= f.check_box :is_active %>
        <%= Spree.t(:is_active) %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :url, class: ['form-group'] do %>
      <%= f.label :url, Spree.t(:url) %> <span class="required">*</span>
      <%= f.text_field :url, class: 'form-control' %>
      <%= f.error_message_on :url %>
    <% end %>
  </div>
</div>
